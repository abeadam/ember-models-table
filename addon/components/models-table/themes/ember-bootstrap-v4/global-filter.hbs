<div class="{{@themeInstance.globalFilterWrapper}}">
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    <BsForm
      class="globalSearch"
      @formLayout="inline"
      @model={{this}}
      @onSubmit={{this.noop}}
    as |Form|>
      <Form.element
        class="input-group"
        @property="value"
        type="text"
      as |GlobalFilter|>
        {{#if @themeInstance.searchLabelMsg}}
          <div class="input-group-prepend">
            <label for={{GlobalFilter.id}} class="input-group-text">{{@themeInstance.searchLabelMsg}}</label>
          </div>
        {{/if}}
        <GlobalFilter.control
          placeholder={{@themeInstance.searchPlaceholderMsg}}
          @onChange={{fn this.updateGlobalFilterString}}
          class="filterString" />
        <div class="input-group-append">
          <BsButton
            class={{concat "clearFilterIcon " @themeInstance.buttonLink}}
            disabled={{unless @globalFilterUsed "disabled"}}
            @outline={{true}}
            @onClick={{fn this.clearGlobalFilter}}>
            <i class={{@themeInstance.clearFilterIcon}}></i>
            <span class="emt-sr-only">{{@themeInstance.clearGlobalFilterMsg}}</span>
          </BsButton>
        </div>
      </Form.element>
    </BsForm>
  {{/if}}
</div>